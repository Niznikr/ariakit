{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md",
    "**/packages/reakit-playground/**",
    "**/packages/website/**"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "next", "v1"],
      "message": "chore(release): Publish"
    }
  }
}
