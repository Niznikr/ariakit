{
  "extends": "./tsconfig.prod.json",
  "compilerOptions": {
    "paths": {
      "ariakit": ["packages/ariakit/src"],
      "ariakit/*": ["packages/ariakit/src/*"],

      "@ariakit/core": ["packages/ariakit-core/src"],
      "@ariakit/core/*": ["packages/ariakit-core/src/*"],

      "@ariakit/playground": ["packages/ariakit-playground/src"],
      "@ariakit/playground/*": ["packages/ariakit-playground/src/*"],

      "@ariakit/react-core": ["packages/ariakit-react-core/src"],
      "@ariakit/react-core/*": ["packages/ariakit-react-core/src/*"],

      "@ariakit/react": ["packages/ariakit-react/src"],
      "@ariakit/react/*": ["packages/ariakit-react/src/*"],

      "ariakit-test": ["packages/ariakit-test/src"],
      "ariakit-test/*": ["packages/ariakit-test/src/*"],

      "ariakit-utils": ["packages/ariakit-utils/src"],
      "ariakit-utils/*": ["packages/ariakit-utils/src/*"],

      "ariakit-react-utils": ["packages/ariakit-react-utils/src"],
      "ariakit-react-utils/*": ["packages/ariakit-react-utils/src/*"]
    }
  }
}
